@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .form-group {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1em;
    }
    .form-group label {
        flex: 1;
        margin-right: 1em;
    }
    .form-group textarea {
        flex: 2;
    }
</style>

<h1>Mental Health Progress Note</h1>
    <form method="post">
    <div class="form-group">
        <label asp-for="Treatment">Treatment</label>
        <textarea asp-for="Treatment"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Progress">Progress</label>
        <textarea asp-for="Progress"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Goals">Goals</label>
        <textarea asp-for="Goals"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes"></textarea>
    </div>
        <button type="submit" asp-page-handler="MoreAngry">More Angry</button>
        <button type="submit" asp-page-handler="LessAngry">Less Angry</button>
    </form>